#
# FILE:         display.asm
# AUTHOR:       avv8047 : Azhur Viano
#
# DESCRIPTION:
#	Module for displaying the board
#
	


#NUMERIC CONSTANTS
PRINT_STRING = 	4
ASCII_PLUS = 43
ASCII_MIN = 45	
ASCII_BAR = 124
ASCII_SPACE = 32
ASCII_NEWLINE = 10	

	

	
	.data
	.align 0
#buffer used to print the board itself
buffer:
	.space 34
#buffer used to print the top or bottom of the board
edge_buffer:
	.space 34

	.text
	.align 2
	.globl init_display
	.globl print_board

#----------------------------------------
#Name:		init_display
#Description: 	initialize buffers used for display
#params: 	a0 the size of the board that will be displayed
#returns:	none
#Destroys

init_display:

	la	$t1, edge_buffer
	li	$t0, ASCII_PLUS
	sb	$t0, 0($t1)
	addi	$t1, $t1, 1

	move	$t2, $a0
	li	$t3, ASCII_MIN

edge_fill_center:
	beq	$t2, $zero, edge_done

	sb	$t3, 0($t1)
	addi	$t1, $t1, 1
	addi	$t2, $t2, -1
	j 	edge_fill_center

edge_done:
	lb	$t0, 0($t1)
	addi	$t1, $t1, 1
	li	$t3, ASCII_NEWLINE
	lb	$t3, 0($t1)
	addi	$t1, $t1, 1
	lb	$zero, 0($t1)

	la	$t1, buffer
	li	$t0, ASCII_BAR
	sb	$t0, 0($t1)
	addi	$t1, $t1, 1

	move	$t2, $a0
	li	$t3, ASCII_SPACE

buf_fill_center:
	beq	$t2, $zero, buf_done

	sb	$t3, 0($t1)
	addi	$t1, $t1, 1
	addi	$t2, $t2, -1
	j 	buf_filler_center
	
buf_done:
	sb	$t0, 0($t1)
	addi	$t1, $t1, 1
	li	$t3, ASCII_NEWLINE
	sb	$t3, 0($t1)
	addi	$t1, $t1, 1
	sb	$zero, 0($t1)

	jr	$ra
	
	

#----------------------------------------
#Name:		print_board
#Description: 	display the board 
#params: 	a0 the address of the board
#		a1 the size of the board
#returns:	none
#Destroys
	
print_board:
	addi	$sp, $sp, -28
	sw	$s0, 0($sp)
	sw	$s1, 4($sp)
	sw	$s2, 8($sp)
	sw	$s3, 12($sp)
	sw	$s4, 16($sp)
	sw	$s5, 20($sp)
	sw	$ra, 24($sp)

	la	$a0, edge_buffer
	li	$v0, PRINT_STRING
	syscall

	move	$s0, $a0
	move	$s1, $a1
	

	
	

	
	
